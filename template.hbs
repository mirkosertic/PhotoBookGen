<html>
    <head>
        <title>{{gallery.title}}</title>
        <link rel="prerender" href="{{navigation.nextLink}}">
        <style>
            body {
                background-color: black;
                margin: 0;
                padding: 0;
                font-family: Verdana, Geneva, sans-serif;
            }

            div {
                display: grid;
                grid-template-columns: 1fr 4fr 1fr 1rem;
                grid-template-rows: 2rem 1fr 1fr 1fr 1fr 2rem;
                grid-gap: 1rem;
                width: 100%;
                height: 100%;
                position: absolute;
                top: 0;
                left: 0;
                overflow: hidden;
                box-sizing: border-box;
                padding-right: 3rem;
                padding-bottom: 2rem;
            }

            header {
                box-sizing: border-box;
                grid-row: 1;
                grid-column-start: 1;
                grid-column-end: 5;
                color: white;
                text-align: center;
                padding: 1rem;
            }

            footer {
                box-sizing: border-box;
                grid-row: 6;
                grid-column-start: 1;
                grid-column-end: 5;
                color: white;
                text-align: center;
                font-size: 1.2rem;
                padding-top: 1rem;
                display: flex;
                flex-direction: row;
                justify-content: center;
                align-items: center;
            }

            figure {
                overflow: hidden;
                width: 100%;
                height: 100%;
                background-color: white;
                box-sizing: border-box;
                border: 0.3rem solid white;
                display: inline-block;
                position: relative;
            }

            figcaption {
                position: relative;
                bottom: 5rem;
                color: black;
                background-color: rgba(255, 255, 255, 0.6);
                display: block;
                padding: 0.4rem 0.4rem 0.4rem 0.4rem;
                font-weight: bold;
                font-size: 1.5rem;
            }

            figure:hover > img {
                transform: scale(1.1);
                filter: none;
            }

            figure > img {
                object-fit: cover;
                object-position: center;
                width: 100%;
                height: 100%;
                max-height: 100%;
                transition: transform 1s;
                filter: brightness(50%);
            }

            figure:nth-child(1) {
                grid-column: 2;
                grid-row-start: 2;
                grid-row-end: 6;
            }

            figure:nth-child(1) img {
                filter: none;
            }

            figure:nth-child(2) {
                grid-column: 1;
                grid-row: 2;
                transform: rotate(3deg);
            }

            figure:nth-child(3) {
                grid-column: 1;
                grid-row: 3;
                transform: rotate(-5deg);
            }

            figure:nth-child(4) {
                grid-column: 1;
                grid-row: 4;
                transform: rotate(3deg);
            }

            figure:nth-child(5) {
                grid-column: 1;
                grid-row: 5;
                transform: rotate(-5deg);
            }


            figure:nth-child(6) {
                grid-column: 3;
                grid-row: 2;
                transform: rotate(-3deg);

            }

            figure:nth-child(7) {
                grid-column: 3;
                grid-row: 3;
                transform: rotate(3deg);
            }

            figure:nth-child(8) {
                grid-column: 3;
                grid-row: 4;
                transform: rotate(-6deg);
            }

            figure:nth-child(9) {
                grid-column: 3;
                grid-row: 5;
                transform: rotate(4deg);
            }

            footer > span {
                padding-left: 2rem;
                padding-right: 2rem;
            }

            img.download {
                padding-right: 2rem;
            }

            img.icon {
                width: 1.5rem;
                height: 1.5rem;
                transition: transform 1s;
            }

            img.icon:hover {
                transform: scale(1.3);
            }
        </style>
    </head>
    <body>
        <div>
            <figure>
                <img src="{{current.currentImageWebP}}">
                <figcaption>A beautiful picture</figcaption>
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/414171/pexels-photo-414171.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/814499/pexels-photo-814499.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/39811/pexels-photo-39811.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/36717/amazing-animal-beautiful-beautifull.jpg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/326055/pexels-photo-326055.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/262669/pexels-photo-262669.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/462162/pexels-photo-462162.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <figure>
                <img src="https://images.pexels.com/photos/207962/pexels-photo-207962.jpeg?auto=compress&cs=tinysrgb&h=350">
            </figure>
            <header>{{gallery.title}}</header>
            <footer>
                <img class="icon download" src="https://raw.githubusercontent.com/encharm/Font-Awesome-SVG-PNG/master/white/png/48/download.png">
